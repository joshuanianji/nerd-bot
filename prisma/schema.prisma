// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         String     @id // Discord ID
    openedHelp Boolean    @default(false)
    reactions  Reaction[] // the reactions the user has made
    Message    Message[]  @relation(name: "UserMessages")
}

model Reaction {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())

    // the person who reacted
    user   User   @relation(fields: [userId], references: [id])
    userId String

    // the message the reaction is on
    message   Message @relation(fields: [messageId], references: [id])
    messageId String
}

model Message {
    id        String @id
    channelId String
    guildId   String

    author   User   @relation(name: "UserMessages", fields: [authorId], references: [id])
    authorId String

    reactions Reaction[]
}
