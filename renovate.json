{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rangeStrategy": "pin",
  "extends": [
    "config:base", "schedule:earlyMondays", "group:allNonMajor"
  ],
  "packageRules": [{
    "description": "Ignore nodejs engine",
    "matchPackageNames": ["node"],
    "matchManagers": ["npm"],
    "matchDepTypes": [ "engines" ],
    "dependencyDashboardApproval": true
  }]
}
