{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2021",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "./build",
    "outDir": "./build"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modues"]
}
